{ pkgs, ... }:

{
  home.packages = with pkgs; [
    # =========================================================================
    # Core utilities (replaces gnu tools from Brewfile)
    # =========================================================================
    coreutils
    findutils
    gnused
    gnutar
    gawk
    gnugrep
    gnumake

    # =========================================================================
    # Shell
    # =========================================================================
    zsh
    bash

    # =========================================================================
    # Version control
    # =========================================================================
    git
    git-crypt
    gh
    tig
    bfg-repo-cleaner
    delta  # Better git diff

    # =========================================================================
    # Build tools & compilers
    # =========================================================================
    cmake
    autoconf
    automake
    libtool
    pkg-config
    gcc

    # =========================================================================
    # Languages & runtimes
    # =========================================================================
    python3
    go
    rustup
    nodejs
    ruby
    perl
    lua
    luajit

    # =========================================================================
    # Security & encryption
    # =========================================================================
    gnupg
    pinentry_mac
    openssl
    age
    sops

    # =========================================================================
    # Networking & web
    # =========================================================================
    curl
    wget
    httpie
    nmap
    autossh
    mtr
    bandwhich

    # =========================================================================
    # Search & navigation
    # =========================================================================
    ripgrep
    fd
    fzf
    tree
    eza  # Modern ls
    zoxide  # Smart cd
    bat  # Better cat
    sd  # Better sed

    # =========================================================================
    # Process & system monitoring
    # =========================================================================
    htop
    btop
    procs  # Better ps
    bottom  # System monitor

    # =========================================================================
    # Cloud & infrastructure
    # =========================================================================
    awscli2
    google-cloud-sdk
    terraform
    kubectl
    k9s

    # =========================================================================
    # Text processing
    # =========================================================================
    jq
    yq
    pandoc
    ispell

    # =========================================================================
    # Media & graphics
    # =========================================================================
    ffmpeg
    imagemagick
    graphviz

    # =========================================================================
    # Email (optional - uncomment if needed)
    # =========================================================================
    # msmtp
    # isync
    # mu
    # notmuch

    # =========================================================================
    # Development utilities
    # =========================================================================
    direnv
    entr
    watch
    ctags
    shellcheck
    nixpkgs-fmt
    nil  # Nix LSP

    # =========================================================================
    # Archiving & compression
    # =========================================================================
    unzip
    p7zip
    xz
    zstd

    # =========================================================================
    # Misc utilities
    # =========================================================================
    rclone
    borgbackup
    gopass
    dnsmasq
    terminal-notifier

    # Fonts (Nerd Fonts)
    (nerdfonts.override { fonts = [ "JetBrainsMono" "FiraCode" "Hack" ]; })
  ];

  fonts.fontconfig.enable = true;
}
